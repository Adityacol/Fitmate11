<resources>
    <!-- Override theme to use the custom appbar rather than supplied by window decor -->
    <style name="GymificTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- BottomNavigation -->
    <style name="Widget.Gymific.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <!-- Toolbar -->
    <style name="Widget.Gymific.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/colorWhite</item>
    </style>

    <!-- Cardview -->
    <style name="Widget.Gymific.Cardview" parent="Widget.MaterialComponents.CardView">
        <item name="android:foregroundTint">@color/colorWhite</item>
    </style>

    <!-- WorkoutTimer -->
    <style name="Gymific.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_circle</item>
        <item name="android:minHeight">250dp</item>
        <item name="android:maxHeight">250dp</item>
        <item name="android:minWidth">250dp</item>
        <item name="android:maxWidth">250dp</item>
        <item name="android:indeterminateOnly">false</item>
    </style>


    <!-- CheckBox -->
    <style name="Widget.Gymific.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CheckBox</item>
    </style>
    <style name="ThemeOverlay.App.CheckBox" parent="">
        <item name="colorOnSurface">@color/colorPrimaryAlpha</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- OptionsMenu Icon -->
    <style name="Widget.Gymific.ActionButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_sort</item>
    </style>

</resources>